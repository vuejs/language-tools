// A launch configuration that compiles the extension and then opens it inside a new window
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Vue",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--disable-extensions",
				"--extensionDevelopmentPath=${workspaceRoot}/vue-language-tools/vscode-vue"
			],
			"outFiles": [
				"${workspaceRoot}/*/*/out/**/*.js"
			],
			"preLaunchTask": {
				"type": "npm",
				"script": "watch"
			}
		},
		{
			"name": "Launch Pug",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--disable-extensions",
				"--extensionDevelopmentPath=${workspaceRoot}/pug-language-tools/vscode-pug"
			],
			"outFiles": [
				"${workspaceRoot}/*/*/out/**/*.js"
			],
			"preLaunchTask": {
				"type": "npm",
				"script": "watch"
			}
		},
		{
			"name": "Launch Svelte",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--disable-extensions",
				"--extensionDevelopmentPath=${workspaceRoot}/examples/vscode-svelte"
			],
			"outFiles": [
				"${workspaceRoot}/*/*/out/**/*.js"
			],
			"preLaunchTask": {
				"type": "npm",
				"script": "watch"
			}
		},
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Launch TypeScript Vue Plugin",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--disable-extensions",
				"--extensionDevelopmentPath=${workspaceRoot}/vue-language-tools/vscode-typescript-vue-plugin"
			],
			"outFiles": [
				"${workspaceRoot}/*/*/out/**/*.js"
			],
			"preLaunchTask": {
				"type": "npm",
				"script": "watch"
			}
		},
		{
			"name": "Launch Vue (Web)",
			"type": "pwa-extensionHost",
			"debugWebWorkerHost": true,
			"request": "launch",
			"args": [
				"--disable-extensions",
				"--extensionDevelopmentPath=${workspaceFolder}/vue-language-tools/vscode-vue",
				"--extensionDevelopmentKind=web"
			],
			"outFiles": [
				"${workspaceRoot}/*/*/out/**/*.js"
			],
			"preLaunchTask": {
				"type": "npm",
				"script": "watch"
			}
		},
		{
			"name": "Attach to Language Features Server",
			"type": "node",
			"request": "attach",
			"port": 6009,
			"restart": true,
			"outFiles": [
				"${workspaceRoot}/*/*/out/**/*.js"
			]
		},
		{
			"name": "Attach to Document Features Server",
			"type": "node",
			"request": "attach",
			"port": 6011,
			"restart": true,
			"outFiles": [
				"${workspaceRoot}/*/*/out/**/*.js"
			]
		}
	],
}