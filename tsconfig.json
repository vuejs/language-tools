{
	"compilerOptions": {
		"target": "ES2016",
		"lib": [
			"WebWorker",
			"ES2021",
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"composite": true,
		"declaration": true,
		"strict": true,
		"alwaysStrict": false,
		"noImplicitUseStrict": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"baseUrl": "./",
		"paths": {
			"preview": [
				"vue-language-tools/preview/src"
			],
			"typescript-vue-plugin": [
				"vue-language-tools/typescript-vue-plugin/src"
			],
			"vue-component-meta": [
				"vue-language-tools/vue-component-meta/src"
			],
			"@volar/vue-language-core": [
				"vue-language-tools/vue-language-core/src"
			],
			"@volar/vue-language-plugin-pug": [
				"vue-language-tools/vue-language-plugin-pug/src"
			],
			"@volar/vue-language-server": [
				"vue-language-tools/vue-language-server/src"
			],
			"@volar/vue-language-service": [
				"vue-language-tools/vue-language-service/src"
			],
			"vue-tsc": [
				"vue-language-tools/vue-tsc/src"
			],
		},
		"noEmit": true,
	},
	"include": [
		"*/*/src",
		"*/*/tests",
	],
	"exclude": [
		"node_modules",
	],
}