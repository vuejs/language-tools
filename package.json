{
	"private": true,
	"packageManager": "pnpm@10.12.3",
	"scripts": {
		"build": "tsc -b",
		"watch": "pnpm run \"/^watch:.*/\"",
		"watch:base": "tsc -b -w",
		"watch:vue": "cd ./extensions/vscode && pnpm run watch",
		"prerelease": "pnpm run build && pnpm run test",
		"release": "lerna publish --no-push --no-git-tag-version",
		"release:next": "pnpm run release --dist-tag next",
		"test": "vitest run",
		"test:update": "vitest run --update",
		"format": "dprint fmt",
		"lint": "tsslint --project {tsconfig.json,packages/*/tsconfig.json,extensions/*/tsconfig.json}",
		"lint:fix": "pnpm run lint -- --fix"
	},
	"devDependencies": {
		"@lerna-lite/cli": "^4.1.2",
		"@lerna-lite/publish": "^4.1.2",
		"@tsslint/cli": "^2.0.1",
		"@tsslint/config": "^2.0.1",
		"@tsslint/eslint": "^2.0.1",
		"@typescript-eslint/eslint-plugin": "^8.19.0",
		"dprint": "^0.50.0",
		"typescript": "latest",
		"vitest": "^3.1.3"
	}
}
